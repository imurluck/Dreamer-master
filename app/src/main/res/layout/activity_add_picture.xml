<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.dreamera_master.PictureModifyActivity">

    <android.support.design.widget.CollapsingToolbarLayout
        android:id="@+id/add_picture_collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:contentScrim="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|exitUntilCollapsed" >

        <ImageView
            android:id="@+id/add_picture_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:fitsSystemWindows="true"
            app:layout_collapseMode="parallax"/>
    </android.support.design.widget.CollapsingToolbarLayout>
    <LinearLayout
        android:id="@+id/add_picture_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <!--<android.support.v7.widget.Toolbar
            android:id="@+id/picture_modify_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Picture modify"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </android.support.v7.widget.Toolbar> -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:fitsSystemWindows="true"
            android:theme="@style/TextLabel">

        <EditText
            android:id="@+id/add_picture_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/edite_text"
            android:cursorVisible="true"
            android:gravity="center_vertical"
            android:hint="标题"
            android:textColor="@android:color/holo_blue_light"
            android:textCursorDrawable="@drawable/edit_cursor" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:fitsSystemWindows="true"
            android:theme="@style/TextLabel">

        <EditText
            android:id="@+id/add_picture_time_str"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edite_text"
            android:gravity="center_vertical"
            android:hint="时间描述"
            android:textColor="@android:color/holo_blue_light"
            android:textCursorDrawable="@drawable/edit_cursor" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:fitsSystemWindows="true"
            android:theme="@style/TextLabel">

        <EditText
            android:id="@+id/add_picture_detail_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edite_text"
            android:gravity="center_vertical"
            android:hint="地点详细描述"
            android:textColor="@android:color/holo_blue_light"
            android:textCursorDrawable="@drawable/edit_cursor" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:fitsSystemWindows="true"
            android:theme="@style/TextLabel">

        <EditText
            android:id="@+id/add_picture_detail_url"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edite_text"
            android:gravity="center_vertical"
            android:hint="详细描述网址（可以不填）"
            android:textColor="@android:color/holo_blue_light"
            android:textCursorDrawable="@drawable/edit_cursor" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:fitsSystemWindows="true"
            android:theme="@style/TextLabel">

        <EditText
            android:id="@+id/add_picture_like_count"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edite_text"
            android:gravity="center_vertical"
            android:hint="相似地点个数（可以不填）"
            android:textColor="@android:color/holo_blue_light"
            android:textCursorDrawable="@drawable/edit_cursor" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:fitsSystemWindows="true"
            android:theme="@style/TextLabel">

        <EditText
            android:id="@+id/add_picture_longtitude"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edite_text"
            android:gravity="center_vertical"
            android:hint="经度（暂时可以不填）"
            android:textColor="@android:color/holo_blue_light"
            android:textCursorDrawable="@drawable/edit_cursor" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:fitsSystemWindows="true"
            android:theme="@style/TextLabel">

        <EditText
            android:id="@+id/add_picture_latitude"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edite_text"
            android:gravity="center_vertical"
            android:hint="纬度（暂时可以不填）"
            android:textColor="@android:color/holo_blue_light"
            android:textCursorDrawable="@drawable/edit_cursor" />

        </android.support.design.widget.TextInputLayout>

        <!--<EditText
            android:id="@+id/add_picture_altitude"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edite_text"
            android:gravity="center_vertical"
            android:hint="海拔（可以不填）"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textCursorDrawable="@drawable/edit_cursor" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add_picture_choose_photo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="选择相片（二选一）"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/add_picture_camera"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="拍摄相片（二选一）"
                android:textColor="@android:color/white"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/add_picture_choose_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="选择日期（必选）"
                android:textColor="@android:color/white"
                android:textSize="15sp" />
        </LinearLayout>

        <Button
            android:id="@+id/add_picture_cancel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button"
            android:text="取消"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/add_picture_add"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button"
            android:text="确认添加"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>

