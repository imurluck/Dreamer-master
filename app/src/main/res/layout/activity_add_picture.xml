<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.dreamera_master.PictureModifyActivity">

    <android.support.design.widget.CollapsingToolbarLayout
        android:id="@+id/add_picture_collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:contentScrim="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|exitUntilCollapsed" >

        <ImageView
            android:id="@+id/add_picture_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:fitsSystemWindows="true"
            app:layout_collapseMode="parallax"/>
    </android.support.design.widget.CollapsingToolbarLayout>

    <LinearLayout
        android:id="@+id/add_picture_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <!--<android.support.v7.widget.Toolbar
            android:id="@+id/picture_modify_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Picture modify"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </android.support.v7.widget.Toolbar> -->

        <EditText
            android:id="@+id/add_picture_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/edite_text"
            android:cursorVisible="true"
            android:gravity="center_vertical"
            android:hint="Title"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textCursorDrawable="@drawable/edit_cursor" />

        <EditText
            android:id="@+id/add_picture_time_str"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edite_text"
            android:gravity="center_vertical"
            android:hint="Time_str"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textCursorDrawable="@drawable/edit_cursor" />

        <EditText
            android:id="@+id/add_picture_detail_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edite_text"
            android:gravity="center_vertical"
            android:hint="Detail_title"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textCursorDrawable="@drawable/edit_cursor" />

        <EditText
            android:id="@+id/add_picture_detail_url"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edite_text"
            android:gravity="center_vertical"
            android:hint="Detail url(can be null)"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textCursorDrawable="@drawable/edit_cursor" />

        <EditText
            android:id="@+id/add_picture_like_count"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edite_text"
            android:gravity="center_vertical"
            android:hint="Like count(can be null)"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textCursorDrawable="@drawable/edit_cursor" />

        <EditText
            android:id="@+id/add_picture_longtitude"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edite_text"
            android:gravity="center_vertical"
            android:hint="Logitude"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textCursorDrawable="@drawable/edit_cursor" />

        <EditText
            android:id="@+id/add_picture_latitude"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edite_text"
            android:gravity="center_vertical"
            android:hint="Latitude"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textCursorDrawable="@drawable/edit_cursor" />

        <EditText
            android:id="@+id/add_picture_altitude"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edite_text"
            android:gravity="center_vertical"
            android:hint="Altitude(can be null)"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textCursorDrawable="@drawable/edit_cursor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add_picture_choose_photo"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="Choose photo"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/add_picture_choose_time"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="Choose time"
                android:textColor="@android:color/white"
                android:textSize="15sp" />
        </LinearLayout>

        <Button
            android:id="@+id/add_picture_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button"
            android:text="Cancel"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/add_picture_add"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button"
            android:text="Add"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>

