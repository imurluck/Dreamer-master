<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="220dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:id="@+id/pop_window_recycler_item_image"
        android:padding="2dp"
        />

    <ImageView
        android:id="@+id/pop_window_item_selected_tag"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignRight="@id/pop_window_recycler_item_image"
        android:layout_alignTop="@id/pop_window_recycler_item_image"
        android:src="@mipmap/ic_selected"
        android:background="@drawable/circle_image"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:visibility="invisible"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pop_window_recycler_item_text"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/pop_window_recycler_item_image"
        android:textColor="#000"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>