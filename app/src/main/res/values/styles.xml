<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLightBlue</item>
        <item name="colorPrimaryDark">@color/colorLightBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">

        <item name="colorControlActivated">@color/cardview_light_background</item>
        <item name="colorControlNormal">@color/cardview_light_background</item>
    </style>

    <style name="MyPictureActivityTheme" parent="AppTheme">
    </style>

    <style name="popup_windows_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_windows</item>
        <item name="android:windowExitAnimation">@anim/exit_windows</item>
    </style>

    <style name="popup_recommnd_photo_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_vertical</item>
        <item name="android:windowExitAnimation">@anim/exit_vertical</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@android:color/holo_blue_light</item>
        <item name="colorAccent">@android:color/holo_blue_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
    </style>
</resources>
